html(lang="en")
    head
        title Page title
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Sen:wght@400;700&display=swap")
        link(rel="stylesheet", href="css/tailwind/tailwind.min.css")
        link(rel="icon", type="image/png", sizes="32x32", href="shuffle-for-tailwind.png")
        script(src="js/main.js")
    body(class="antialiased bg-body text-body font-body")
        div(class="")
            section(class="pb-20 bg-gray-800")
                nav(class="relative")
                    div(class="flex py-8 px-4 lg:px-8 justify-between items-center")
                        a(class="text-2xl text-white font-bold", href="#")
                            img(class="h-7", src="zospace-assets/logos/zospace-logo.svg", alt="", width="auto")
                        div(class="lg:hidden")
                            button(class="p-2 navbar-burger")
                                svg(class="w-10 h-3", width="39", height="13", viewbox="0 0 39 13", fill="none", xmlns="http://www.w3.org/2000/svg")
                                    rect(width="39", height="2", rx="1", fill="#C4C4C4")
                                    rect(x="19", y="11", width="20", height="2", rx="1", fill="#C4C4C4")
                        div(class="hidden lg:block absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2")
                            ul(class="flex items-center text-white space-x-10")
                                li
                                    a(class="text-white font-bold text-lg", href="#") Booking
                                span
                                    svg(width="5", height="5", viewbox="0 0 5 5", fill="none", xmlns="http://www.w3.org/2000/svg")
                                        circle(cx="2.5", cy="2.5", r="2.5", fill="#726B6B")
                                li
                                    a(class="text-white font-bold text-lg", href="#") Starport locations
                                span
                                    svg(width="5", height="5", viewbox="0 0 5 5", fill="none", xmlns="http://www.w3.org/2000/svg")
                                        circle(cx="2.5", cy="2.5", r="2.5", fill="#726B6B")
                                li
                                    a(class="text-white font-bold text-lg", href="#") CO2 emission
                                span
                                    svg(width="5", height="5", viewbox="0 0 5 5", fill="none", xmlns="http://www.w3.org/2000/svg")
                                        circle(cx="2.5", cy="2.5", r="2.5", fill="#726B6B")
                                li
                                    a(class="text-white font-bold text-lg", href="#") Our story
                        div(class="hidden lg:block")
                div(class="relative container px-4 pt-12 md:pt-20 mx-auto")
                    div(class="flex flex-wrap items-center -mx-4 mb-20 2xl:mb-14")
                        div(class="w-full lg:w-1/2 px-4 mb-16 lg:mb-0")
                            span(class="text-lg font-bold text-blue-400") Fast as a rocket
                            h2(class="max-w-2xl mt-12 mb-12 text-6xl 2xl:text-8xl text-white font-bold font-heading") Travel around the world, in a few hours!
                            p(class="mb-12 lg:mb-16 2xl:mb-24 text-xl text-gray-100") For anyone who loves the destination and to travel in style.
                            a(class="inline-block px-12 py-5 text-lg text-white font-bold bg-blue-500 hover:bg-blue-600 rounded-full transition duration-200", href="#") Book now!
                        div(class="w-full lg:w-1/2 px-4")
                            img(class="w-full", src="zospace-assets/images/men-circle-stars.png", alt="")
                div(class="hidden navbar-menu fixed top-0 left-0 bottom-0 w-5/6 max-w-sm z-50")
                    div(class="navbar-backdrop fixed inset-0 bg-gray-800 opacity-80")
                    nav(class="relative flex flex-col py-8 h-full w-full bg-white overflow-y-auto")
                        div(class="flex items-center mb-16 pr-6")
                            a(class="ml-10 mr-auto text-2xl text-gray-800 font-bold", href="#")
                                img(class="h-7", src="zospace-assets/logos/zospace-dark-logo.svg", alt="", width="auto")
                        div
                            ul
                                li(class="mb-1 px-10")
                                    a(class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl", href="#") Booking
                                li(class="mb-1 px-10")
                                    a(class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl", href="#") Starport locations
                                li(class="mb-1 px-10")
                                    a(class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl", href="#") CO2 emission
                                li(class="mb-1 px-10")
                                    a(class="block pl-8 py-4 text-xl text-gray-800 hover:bg-blueGray-50 rounded-xl", href="#") Our story
                        div(class="mt-auto px-10")
                            div(class="pt-6")
                                a(class="block mb-4 py-4 px-12 text-gray-800 text-center font-bold border border-gray-50 hover:border-gray-100 rounded-full", href="#") Sign in
                                a(class="block py-4 px-12 text-white text-center font-bold bg-blue-500 hover:bg-blue-600 rounded-full transition duration-200", href="#") Sign up
                            p(class="mt-6 mb-4 text-lg text-center")
                                span 2021 © Zospace. All rights reserved.
            section(class="py-20 2xl:py-40 bg-gray-800")
                p(class="text-center text-lg text-white px-4 border-t border-gray-500")
                    span © 2023 Lucky Fluxx
                    |           
                    span(class="text-gray-300") All rights reserved.
